
<div class="container">
 <%= render 'shared/form', obj: @article%>
<%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f|  %>
 <div  class="form-group row">

   <%= f.label :title, class: "col-2 col-form-label" %>
   <div class="col-10">
   <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
   </div>
 </div>
 <div class="form-group row">
   <%= f.label :description, class:"col-2 col-form-label" %>
   <div class="col-10">
   <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of title" %>
   </div>
   </div>
  <div class="form-group row justify-content-center">
   <%= f.submit class: "btn btn-success btn-lg" %>
  </div>
<% end %>
</div>